{{!< default}}

{{#author}}
<header id="blog-header"{{#if cover_image}} class="has-cover"{{else}}{{#if @blog.cover_image}} class="has-cover"{{/if}}{{/if}}>
	<div class="inner">
		<div id="navbar">
			{{#if @blog.logo}}
			<span class="blog-logo">
				<a href="{{@blog.url}}">
					{{#if cover_image}}
						<img src="{{asset "img/logo-light.png"}}" alt="Blog Logo" />
					{{else}}
						{{#if @blog.cover_image}}
							<img src="{{asset "img/logo-light.png"}}" alt="Blog Logo" />
						{{else}}
							<img src="{{@blog.logo}}" alt="Blog Logo" />
						{{/if}}
					{{/if}}
				</a>
			</span>
			{{/if}}
			{{#if @blog.navigation}}
				{{navigation}}
			{{else}}
				<nav>
					<ul class="navigation-links">
						{{#if @labs.subscribers}}
						<li class="nav-subscribe"><a href="{{@blog.url}}/subscribe/"><i class="ic ic-mail"></i> Subscribe</a></li>
						{{else}}
						<li class="nav-rss"><a href="{{@blog.url}}/rss/"><i class="ic ic-rss"></i></a></li>
						{{/if}}
					</ul>
				</nav>
			{{/if}}
		</div>
		{{#if cover_image}}
		<div class="blog-cover cover" style="background-image: url('{{img_url cover_image}}');"></div>
		{{else}}
		{{#if @blog.cover_image}}
		<div class="blog-cover cover" style="background-image: url('{{img_url @blog.cover}}');"></div>
		{{/if}}
		{{/if}}
	</div>
</header>

<section id="blog-author"{{#if cover_image}} class="has-cover"{{else}}{{#if @blog.cover_image}} class="has-cover"{{/if}}{{/if}}>
	<div class="inner">

		<aside class="post-author">
			<figure class="post-author-avatar avatar">
				{{#if profile_image}}
					<img src="{{profile_image}}" alt="{{name}}" />
				{{/if}}
			</figure>
			<div class="post-author-bio">
				<h2 class="post-author-name">{{name}}</h2>
				{{#if bio}}
					<p class="post-author-about">{{{bio}}}</p>
				{{/if}}
				<span class="post-author-stats"><i class="ic ic-pencil"></i> {{plural ../pagination.total empty=(t "No Posts") singular=(t "% Post") plural=(t "% Posts")}}</span>
				{{#if location}}
					<span class="post-author-location"><i class="ic ic-location"></i> {{location}}</span>
				{{/if}}
				{{#if website}}
					<span class="post-author-website"><i class="ic ic-link"></i> <a href="{{website}}">{{t "Website"}}</a></span>
				{{/if}}
				{{#if twitter}}
					<span class="post-author-twitter"><i class="ic ic-twitter"></i> <a target="_blank" href="https://twitter.com/{{twitter}}">Twitter</a></span>
				{{/if}}
				{{#if facebook}}
					<span class="post-author-facebook"><i class="ic ic-facebook"></i> <a target="_blank" href="https://facebook.com/{{facebook}}">Facebook</a></span>
				{{/if}}
			</div>
			<div class="clear"></div>
		</aside>
	</div>
</section>

{{/author}}

<div id="index" class="container">

	<main class="content" role="main">

		{{> "loop"}}

	</main>

</div>
