{{!< default}}

{{#post}}

<header id="post-header"{{#if feature_image}} class="has-cover" {{/if}}>
	<div class="inner">
		<div id="navbar">
			{{#if @blog.logo}}
			<span class="blog-logo">
				<a href="{{@blog.url}}">
					{{#if feature_image}}
						<img src="../src/img/logo-light.png" alt="Blog Logo" />
					{{else}}
						<img src="{{@blog.logo}}" alt="Blog Logo" />
					{{/if}}
				</a>
			</span>
			{{/if}}
			{{navigation}}
		</div>
		<h1 class="post-title">{{{title}}}</h1>
		{{#if feature_image}}<div class="post-cover cover" style="background-image: url('{{img_url feature_image}}');"></div>{{/if}}
	</div>
</header>

<main class="content" role="main">
	<article class="{{post_class}}">
		<div class="inner">
		
			<section class="post-content">
				{{content}}
			</section>

		</div>
	</article>
</main>

{{/post}}