{{!< default}}

<header id="blog-header"{{#if tag.feature_image}} class="has-cover"{{else}}{{#if @blog.cover_image}} class="has-cover"{{/if}}{{/if}}>
	<div class="inner">
		<div id="navbar">
			{{#if @blog.logo}}
			<span class="blog-logo">
				<a href="{{@blog.url}}">
					{{#if tag.feature_image}}
						<img src="{{asset "img/logo-light.png"}}" alt="Blog Logo" />
					{{else}}
						{{#if @blog.cover_image}}
							<img src="{{asset "img/logo-light.png"}}" alt="Blog Logo" />
						{{else}}
							<img src="{{@blog.logo}}" alt="Blog Logo" />
						{{/if}}
					{{/if}}
				</a>
			</span>
			{{/if}}
			{{#if @blog.navigation}}
				{{navigation}}
			{{else}}
				<nav>
					<ul class="navigation-links">
						{{#if @labs.subscribers}}
						<li class="nav-subscribe"><a href="{{@blog.url}}/subscribe/"><i class="ic ic-mail"></i> Subscribe</a></li>
						{{else}}
						<li class="nav-rss"><a href="{{@blog.url}}/rss/"><i class="ic ic-rss"></i></a></li>
						{{/if}}
					</ul>
				</nav>
			{{/if}}
		</div>
		<h1 class="blog-name">{{tag.name}}</h1>
		<span class="blog-description">
		{{#if tag.description}}
			{{tag.description}}
		{{else}}
			{{t "Posts"}}: {{pagination.total}}
		{{/if}}
		</span>
		{{#if tag.feature_image}}
		<div class="blog-cover cover" style="background-image: url('{{img_url tag.feature_image}}');"></div>
		{{else}}
		{{#if @blog.cover_image}}
		<div class="blog-cover cover" style="background-image: url('{{img_url @blog.cover_image}}');"></div>
		{{/if}}
		{{/if}}
	</div>
</header>

<div id="index" class="container">

	<main class="content" role="main">

		{{> "loop"}}

	</main>

</div>
